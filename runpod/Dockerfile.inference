# RunPod Serverless Inference Endpoint for Qwen3-TTS
FROM runpod/pytorch:2.2.0-py3.10-cuda12.1.1-devel-ubuntu22.04

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    ffmpeg \
    libsndfile1 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install (inference needs fewer deps)
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy handler code
COPY inference_handler.py .

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV HF_HOME=/tmp/huggingface
ENV MODEL_CACHE_DIR=/tmp/tts_models

# Create cache directory
RUN mkdir -p /tmp/tts_models

# RunPod serverless entry point
CMD ["python", "-u", "inference_handler.py"]
